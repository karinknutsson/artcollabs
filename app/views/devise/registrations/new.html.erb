<div class="form-container">

  <h2>Sign up</h2>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :username,
                required: true,
                autofocus: true,
                hint: "(You can change it later.)",
                input_html: { autocomplete: "username", class: "artcollabs-input", maxlength: 20 }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "artcollabs-input", maxlength: 320 }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "artcollabs-input" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "artcollabs-input" } %>
    </div>

    <div class="form-actions float-right">
      <br>
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

</div>
