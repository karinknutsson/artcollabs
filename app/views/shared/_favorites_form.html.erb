<% if favorite = Favorite.find_by(user: current_user, project: @project) %>
  <%= link_to "Delete from favorites", project_favorites_path(@project, favorite_project), method: :delete, class: "btn-artcollabs btn-warm-red-outline" %>
<% else %>
  <%= link_to "Add to favorites", project_favorites_path(@project), method: :post, class: "white-text btn-artcollabs btn-warm-red" %>
<% end %>
