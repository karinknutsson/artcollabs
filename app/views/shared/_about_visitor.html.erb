  <div class="show-content">

    <div class="content-left">

      <div class="project-description">
        <%= @project.description %>
      </div>

    </div>

    <div class="content-right">

      <% if @user_type == :pending %>

        <button type="button" class="white btn-artcollabs btn-disabled btn-apply" disabled>
          Application sent
        </button>

      <% else %>

        <button type="button" class="white btn-artcollabs btn-warm-red btn-apply" data-toggle="modal" data-target="#applyModal">
          Apply
        </button>

      <% end %>

      <div class="modal fade" id="applyModal" tabindex="-1" role="dialog" aria-labelledby="applyModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="applyModalLabel">Apply for <%= @project.title %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= render "shared/collaborations_form" %>
            </div>
          </div>
        </div>
      </div>

      <%= render "shared/favourite_projects_form" %>

      <%= render "shared/owner" %>

    </div>

  </div>

  <div style="height: 60px"></div>
